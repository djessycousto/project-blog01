    <!--  comments -->
    <section class="comments">
        <h5>comments: 0</h5>
        <!-- <div class="line-div"></div> -->

        <div class="output-comments">
            <p>here is your comment</p>
        </div>

        <div class="comments-inputs">
            <form id="commentForm">
                <div class="message"></div>
                <textarea id="comments" placeholder="Your thought" name=" comments"></textarea>
                <!-- <input type="text-a" placeholder="Your thought"> -->
                <button id="cbtn" type="submit">send</button>
            </form>
        </div>
    </section>

